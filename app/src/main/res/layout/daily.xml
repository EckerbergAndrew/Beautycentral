<?xml version="1.0" encoding="utf-8"?>
<!--this is the daily schedule where the card-view goes.
 + button adds a client, bringing them to client_add.xml-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="365dp"
    android:layout_height="670dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/peach"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/timelist"
        android:layout_width="55dp"
        android:layout_height="630dp"
        android:text="@string/list"
        android:textSize="9sp"
        />
    <!-- the exit button: -->
    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="start"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/ic_round_close_24"/>

    <!--add client button: -->
    <Button
        android:id="@+id/addClientButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="+"
        android:layout_below="@id/timelist"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/apptcardView"
        android:layout_width="280dp"
        android:layout_height="630dp"
        android:layout_toRightOf="@id/timelist"
        android:background="@color/drkpeach"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/clientName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@style/TextAppearance.AppCompat.Large"
                />

            <TextView
                android:id="@+id/clientPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/clientService"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/clientNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="4"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>