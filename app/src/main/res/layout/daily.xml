<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center|right"
    android:background="@color/peach"
    android:orientation="horizontal"
    android:paddingStart="10dp">
    <!-- layout width 365dp; height 670dp -->

    <ImageView
        android:id="@+id/timelist"
        android:layout_width="65dp"
        android:layout_height="670dp"
        android:layout_below="@+id/addClientButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="25dp"
        android:src="@drawable/timelist"
        app:layout_constraintEnd_toStartOf="@id/recyclerView" />

    <Button
        android:id="@+id/addClientButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:text="Add" />

    <Button
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:text="Back" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="593dp"
        android:layout_below="@+id/addClientButton"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="35dp"
        android:layout_toEndOf="@+id/timelist"
        android:layout_toRightOf="@id/timelist"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <TextView
        android:id="@+id/datelabel"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="31dp"
        android:layout_toStartOf="@+id/backBtn"
        android:layout_toEndOf="@+id/addClientButton"
        android:text="mm/dd/yyyy"
        android:textColor="@color/rosybrown" />

</RelativeLayout>