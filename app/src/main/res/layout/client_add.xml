<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddClientActivity"
    android:background="@color/peach">

    <TextView
        android:id="@+id/nametitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hint_clientName"
        android:textColor="@color/rosybrown"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-2dp" />

    <EditText
        android:id="@+id/clientname"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="8dp"
        android:autofillHints=""
        android:background="@color/drkpeach"
        android:inputType="text"
        android:maxLength="40"
        android:maxLines="1"
        android:padding="8dp"
        android:textSize="14sp"
        app:endIconMode="clear_text"
        app:layout_constraintTop_toBottomOf="@+id/nametitle"/>

    <TextView
        android:id="@+id/contacttitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/contactNo"
        android:textColor="@color/rosybrown"
        app:layout_constraintTop_toBottomOf="@+id/clientname"
        tools:layout_editor_absoluteX="6dp" />

    <EditText
        android:id="@+id/clientphone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="8dp"
        android:autofillHints="phone number"
        android:background="@color/drkpeach"
        android:inputType="phone"
        android:maxLines="1"
        android:padding="8dp"
        android:textSize="14sp"
        app:endIconMode="clear_text"
        app:layout_constraintTop_toBottomOf="@+id/contacttitle"
        tools:layout_editor_absoluteX="-2dp" />

    <TextView
        android:id="@+id/serviceText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="@string/service"
        android:textColor="@color/rosybrown"
        app:layout_constraintTop_toBottomOf="@+id/clientphone"
        tools:layout_editor_absoluteX="-8dp" />

    <EditText
        android:id="@+id/clientservice"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="3dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/serviceText"
        android:entries="@array/services"
        android:background="@color/drkpeach"
        android:importantForAutofill="no"
        android:inputType="text" />

    <TextView
        android:id="@+id/notestitle"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="@string/notes"
        android:textColor="@color/rosybrown"
        app:layout_constraintTop_toBottomOf="@id/clientservice"/>
    <EditText
        android:id="@+id/clientnotes"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        android:inputType="text|textMultiLine"
        app:layout_constraintTop_toBottomOf="@id/notestitle"
        android:background="@color/drkpeach"
        android:hint="Treatment details, special requests, allergies, etc."
        android:importantForAutofill="no" />

    <Button
        android:id="@+id/btnaddappt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/btnaddappttxt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clientnotes"
        app:layout_constraintVertical_bias="0.152" />

    <Button
        android:id="@+id/btncancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancelbtntxt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clientnotes"
        app:layout_constraintVertical_bias="0.152" />

    <Button
        android:id="@+id/btndel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete_client"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnaddappt"
        app:layout_constraintVertical_bias="0.061" />


</androidx.constraintlayout.widget.ConstraintLayout>